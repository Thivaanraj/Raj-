    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:text="RANK"
            android:textAlignment="center"
            android:id="@+id/dash_rank_header"
            android:layout_width="80dp"
            android:layout_height="20dp" />

        <TextView
            android:text="VALUE"
            android:textAlignment="center"
            android:id="@+id/dash_rank_value"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_marginTop="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_points"
            android:layout_below="@+id/dash_rank_value"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView" />

        <TextView
            android:text="POINTS"
            android:id="@+id/dash_point_value"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:textSize="20dp"
            android:layout_below="@+id/dash_rank_value"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:text="NICKNAME"
            android:textAlignment="center"
            android:id="@+id/dash_nickname"
            android:layout_width="220dp"
            android:textSize="32dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/dash_rank_value"
            android:layout_alignBottom="@+id/dash_rank_value"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="Last Easy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dash_showEasy_btn"
            android:layout_weight="1" />

        <Button
            android:text="Last Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dash_showMedium_btn"
            android:layout_weight="1" />

        <Button
            android:text="Last Hard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dash_showHard_btn"
            android:layout_weight="1" />
    </LinearLayout>

