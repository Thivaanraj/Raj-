<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pc1.exergame.menu.activities.MainMenuActivity">
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_container"
        android:layout_centerInParent="true" />

    <Button
        android:text="Chall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/challenges"
        android:onClick="ChallengesClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/challenges"
        android:id="@+id/map"
        android:onClick="MapClick"/>

    <Button
        android:text="Ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/map"
        android:id="@+id/ranking"
        android:onClick="RankingClick"
        android:textSize="14sp" />

    <Button
        android:text="Dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ranking"
        android:id="@+id/dashboard"
        android:onClick="DashboardClick"/>

    <Button
        android:text="Log out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/global_logout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="globalSignOut"/>

</RelativeLayout>
